#!/bin/bash

DIR=$(readlink -f "$(dirname "$0")")

usage() {
  cat <<EOF
Cleans local machine from files generated by `install`

Options:
  -h, --help Shows this message
EOF
}

cd "$DIR/.." || exit 1
rm -rf data/certs

echo "Deleting and untrusting local root certificate..."
sudo rm /etc/ca-certificates/trust-source/anchors/oddin-local.crt 2> /dev/null
sudo trust extract-compact
